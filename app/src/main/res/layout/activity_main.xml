<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:background="@color/dark_blue"
        android:paddingTop="25dp"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp">
            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@raw/model"
                android:padding="3dp"
                android:background="@drawable/background_profile_picture"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Ferdhi Sambi"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total_kali_cicilan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_name"
                    android:fontFamily="@font/roboto_light"
                    android:text="Total Jumlah Cicilan 12 Kali Bayar"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </RelativeLayout>

        </RelativeLayout>
<!--        Spacing-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!--        Spacing-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="75dp"
                android:background="@drawable/background_sisa_cicilan"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_sisa_ciclan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Sisa Cicilan"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/nominal_sisa_cicilan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_sisa_ciclan"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rp 10.000.000,00"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="75dp"
                android:background="@drawable/background_total_cicilan"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_total_ciclan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="Sisa Cicilan"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/nominal_total_cicilan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_total_ciclan"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Rp 12.000.000,00"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--        spacing-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_jatuh_tempo"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:src="@raw/due_date"
                    android:background="@drawable/background_ic_light_blue_grey_2"
                    android:padding="3dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ic_jatuh_tempo"
                    android:layout_marginStart="6dp"
                    android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/text_jatuh_tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jatuh Tempo"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tanggal_jatuh_tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal 15"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/white"
                    android:layout_below="@id/text_jatuh_tempo"/>
                </RelativeLayout>
            </RelativeLayout>
            <!--        spacing-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ic_minimal_pembayaran"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:src="@raw/wallet"
                    android:background="@drawable/background_ic_light_blue_grey_2"
                    android:padding="3dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ic_minimal_pembayaran"
                    android:layout_marginStart="6dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/text_minimal_pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minimal Pembayaran"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/nominal_minimal_pembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 1.000.000,00"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto_light"
                        android:textColor="@color/white"
                        android:layout_below="@id/text_minimal_pembayaran"/>
                </RelativeLayout>
            </RelativeLayout>
            <!--        spacing-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
<!--        spacing-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_punishment_atau_hukuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:layout_marginTop="-1dp"
        android:fontFamily="@font/roboto_bold"
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:text="Punishment / Hukuman :"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_punishment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_punishment_atau_hukuman"
        android:layout_marginTop="-2dp"
        android:background="@color/white"
        android:paddingHorizontal="15dp" />
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="15dp">
        <TextView
            android:id="@+id/text_status_cicilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status : Belum Lunas"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <Button
            android:id="@+id/btn_uninstall_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uninstall App"
            android:backgroundTint="@color/blue_light_grey"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

